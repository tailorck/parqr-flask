{
    "manifest_version": 2,
    "name": "PARQR",
    "description": "Piazza Automated Related Question Recommender. PARQR recommends similar posts on Piazza to save you time!",
    "version": "1.1.2",
    "browser_action": {
        "default_icon": "parqr.png",
        "default_popup": "parqr.html"
    },
    "permissions": [
        "activeTab",
        "http://localhost:8000/",
        "http://*.piazza.com/*",
        "cookies"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.piazza.com/*"
            ],
            "js": [
                "js/jquery-3.2.0.min.js",
                "content.js"
            ],
            "css": [
                "css/buttons.css",
                "css/parqr.css"
            ],
            "run_at": "document_end"
        }
    ]
}
